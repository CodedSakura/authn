<form action="{{path "/reset"}}" method="post">
  {{#if error}}<div class="error">{{error}}</div>{{/if}}
  <label>
    username:
    <input name="username">
  </label>
  <input type="submit" value="reset password">
  <input type="hidden" name="csrf" value="{{csrf}}">
  <div>
    <a href="{{path "/"}}">login</a>
    <a href="{{path "/register"}}">register</a>
  </div>
</form>
